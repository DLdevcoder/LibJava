<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane stylesheets="@../../resources/stylesheet/CommonMember.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.member.FindMemberController">

    <top>
        <VBox spacing="10">
            <!-- Header -->
            <fx:include source="../frame/Header.fxml"/>
        </VBox>
    </top>

    <left>
        <fx:include source="Sidebar.fxml"/>
    </left>

    <center>
        <GridPane hgap="15" vgap="10" alignment="CENTER" style="-fx-padding: 20;" stylesheets="@../../resources/stylesheet/FindMember.css">
            <!-- Title -->
            <children>
                <Label text="Find Member by ID" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

                <!-- Input Section -->
                <Label text="Member ID:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="idField" promptText="Enter User ID" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <!-- Search Button -->
                <Button fx:id="searchButton" text="Search" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="2"
                        style="-fx-background-color: #007BFF; -fx-text-fill: white;" onAction="#handleFindMember"/>

                <!-- Result Section -->
                <Separator GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.columnSpan="2" style="-fx-background-color: #ccc;" />

                <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                <Label fx:id="nameLabel" text="-" GridPane.columnIndex="1" GridPane.rowIndex="4" style="-fx-font-style: italic;" />

                <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                <Label fx:id="emailLabel" text="-" GridPane.columnIndex="1" GridPane.rowIndex="5" style="-fx-font-style: italic;" />

                <Label text="Phone:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                <Label fx:id="phoneLabel" text="-" GridPane.columnIndex="1" GridPane.rowIndex="6" style="-fx-font-style: italic;" />

                <Label text="Address:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
                <Label fx:id="addressLabel" text="-" GridPane.columnIndex="1" GridPane.rowIndex="7" style="-fx-font-style: italic;" />

                <Label text="Membership Date:" GridPane.columnIndex="0" GridPane.rowIndex="8" />
                <Label fx:id="membershipDateLabel" text="-" GridPane.columnIndex="1" GridPane.rowIndex="8" style="-fx-font-style: italic;" />

                <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="9" />
                <Label fx:id="passwordLabel" text="-" GridPane.columnIndex="1" GridPane.rowIndex="9" style="-fx-font-style: italic;" />
            </children>
        </GridPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" style="-fx-padding: 10; -fx-background-color: #f2f2f2;">
            <Label text="Â© 2024 Your Application Name. All Rights Reserved." style="-fx-font-size: 12px;" />
        </HBox>
    </bottom>

</BorderPane>
