<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane stylesheets="@../../resources/stylesheet/CommonMember.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.member.FindMemberController">

    <top>
        <VBox spacing="10">
            <!-- Header -->
            <fx:include source="../frame/Header.fxml" />
        </VBox>
    </top>

    <left>
        <fx:include source="Sidebar.fxml" />
    </left>

    <center>
        <GridPane alignment="CENTER" hgap="15" style="-fx-padding: 20;" stylesheets="@../../resources/stylesheet/FindMember.css" vgap="10">
            <!-- Title -->
            <children>
                <Label prefHeight="45.0" prefWidth="163.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Find Member by ID" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" />

                <!-- Input Section -->
                <Label text="Member ID:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="idField" promptText="Enter User ID" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <!-- Search Button -->
                <Button fx:id="searchButton" onAction="#handleFindMember" prefWidth="114.0" style="-fx-background-color: #66bb6a; -fx-text-fill: white;" text="Search" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="2" />

                <!-- Result Section -->
                <Separator style="-fx-background-color: #ccc;" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="3" />

                <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                <Label fx:id="nameLabel" style="-fx-font-style: italic;" text="-" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                <Label fx:id="emailLabel" style="-fx-font-style: italic;" text="-" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                <Label text="Phone:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                <Label fx:id="phoneLabel" style="-fx-font-style: italic;" text="-" GridPane.columnIndex="1" GridPane.rowIndex="6" />

                <Label text="Address:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
                <Label fx:id="addressLabel" style="-fx-font-style: italic;" text="-" GridPane.columnIndex="1" GridPane.rowIndex="7" />

                <Label text="Membership Date:" GridPane.columnIndex="0" GridPane.rowIndex="8" />
                <Label fx:id="membershipDateLabel" style="-fx-font-style: italic;" text="-" GridPane.columnIndex="1" GridPane.rowIndex="8" />

                <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="9" />
                <Label fx:id="passwordLabel" style="-fx-font-style: italic;" text="-" GridPane.columnIndex="1" GridPane.rowIndex="9" />
            </children>


        </GridPane>
    </center>
</BorderPane>
