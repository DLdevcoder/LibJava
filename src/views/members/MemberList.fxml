<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane stylesheets="@../../resources/Frame.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.member.MemberController">

    <top>
        <VBox>
            <!-- Header -->
            <HBox fx:id="header" spacing="10" styleClass="header">
                <Label styleClass="header-label" text="ManageLib">
                    <font>
                        <Font size="35.0" />
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS" />
                    <Label layoutX="237.0" layoutY="24.0" style="-fx-font-size: 20; -fx-font-weight: bold;" text="MEMBER MANAGEMENT" />
                <Region HBox.hgrow="ALWAYS" />
            </HBox>
            <!-- Navbar -->
            <HBox fx:id="navbar" spacing="20" styleClass="navbar">
                <Button prefWidth="200" styleClass="navbar-button" text="Home">
                    <graphic>
                        <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                            <image>
                                <Image url="@/home.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button prefWidth="200" styleClass="navbar-button" text="Document management">
                    <graphic>
                        <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                            <image>
                                <Image url="@/document.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button onAction="#sceneBorrowRecordList" prefWidth="200" styleClass="navbar-button" text="Borrow documents">
                    <graphic>
                        <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                            <image>
                                <Image url="@/borrowBook.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button onAction="#sceneMemberList" prefWidth="200" styleClass="navbar-button" text="Member management">
                    <graphic>
                        <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                            <image>
                                <Image url="@/member.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </HBox>

        </VBox>
    </top>

    <left>
        <fx:include source="Sidebar.fxml" />
    </left>
    <right>
        <Label prefHeight="10" prefWidth="30" />
    </right>
    <center>
      <AnchorPane BorderPane.alignment="CENTER">
         <children>
             <TableView fx:id="memberTableView" AnchorPane.topAnchor="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
                  <columns>
                      <TableColumn fx:id="idColumn" prefWidth="40" text="ID" />
                      <TableColumn fx:id="nameColumn" prefWidth="110" text="Name" />
                      <TableColumn fx:id="emailColumn" prefWidth="90" text="Email" />
                      <TableColumn fx:id="passwordColumn" prefWidth="75.0" text="Password" />
                      <TableColumn fx:id="phoneColumn" prefWidth="85" text="Phone" />
                      <TableColumn fx:id="addressColumn" prefWidth="100" text="Address" />
                      <TableColumn fx:id="membershipDateColumn" prefWidth="130" text="Membership Date" />
                      <TableColumn fx:id="actionColumn" text="Action" />
                  </columns>
              </TableView>
         </children>
      </AnchorPane>
    </center>
</BorderPane>
