<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane stylesheets="@../../resources/Frame.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.member.AddMemberController">

    <top>
        <VBox>
            <!-- Header -->
            <HBox fx:id="header" spacing="10" styleClass="header">
                <Label styleClass="header-label" text="ManageLib">
                    <font>
                        <Font size="35.0" />
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS" />
                    <Label layoutX="237.0" layoutY="24.0" style="-fx-font-size: 20; -fx-font-weight: bold;" text="MEMBER MANAGEMENT" />
                <Region HBox.hgrow="ALWAYS" />
            </HBox>

            <!-- Navbar -->
            <fx:include source="../frame/Navbar.fxml" />

        </VBox>
    </top>

    <left>
        <fx:include source="Sidebar.fxml" />
    </left>
    <right>
        <Label prefHeight="10" prefWidth="30" />
    </right>
   <center>
       <AnchorPane prefHeight="300.0" prefWidth="606.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
           <children>
               <VBox alignment="CENTER" spacing="10" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="20.0">
                   <!-- Tiêu đề -->
                   <Label style="-fx-font-size: 16; -fx-font-weight: bold;" text="ADD MEMBER" />

                   <!-- Các trường nhập liệu -->
                   <TextField fx:id="nameField" layoutX="100.0" layoutY="75.0" prefHeight="35.0" promptText="Name" />
                   <TextField fx:id="emailField" layoutX="100.0" layoutY="125.0" prefHeight="35.0" promptText="Email" />
                   <TextField fx:id="passwordField" layoutX="100.0" layoutY="175.0" prefHeight="35.0" promptText="Password" />
                   <TextField fx:id="addressField" layoutX="100.0" layoutY="225.0" prefHeight="35.0" promptText="Address" />
                   <TextField fx:id="phoneField" layoutX="100.0" layoutY="275.0" prefHeight="35.0" promptText="Phone" />
                   <!-- Phần chứa nút bấm -->
                   <HBox alignment="CENTER" spacing="50">
                   <Button onAction="#handleAddMember" prefHeight="25.0" prefWidth="80.0" text="Add" />
                   <Button onAction="#handleCancel" prefHeight="25.0" prefWidth="85.0" text="Cancel" />
                   </HBox>
               </VBox>

           </children>
       </AnchorPane>
   </center>
</BorderPane>
