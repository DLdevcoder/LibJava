<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane stylesheets="@../../resources/BorrowList.css" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.borrow_record.BorrowRecordController">
    <top>
        <fx:include source="../frame/Header.fxml" />
    </top>
    <left>
        <fx:include source="SidebarBorrow.fxml" />
    </left>
    <right>
        <Label prefHeight="10" prefWidth="30" />
    </right>
    <center>
        <VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
            <Label />
         <Label styleClass="header-label" text="Borrow record list">
            <font>
               <Font size="24.0" />
            </font>
         </Label>
            <TableView fx:id="tableView" prefHeight="482.0" prefWidth="1042.0" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="recordIdColumn" prefWidth="115" text="Record ID" />
                    <TableColumn fx:id="documentIdColumn" prefWidth="115" text="Document ID" />
                    <TableColumn fx:id="memberIdColumn" prefWidth="115" text="Member ID" />
                    <TableColumn fx:id="borrowDateColumn" prefWidth="150" text="Borrow Date" />
                    <TableColumn fx:id="returnDateColumn" prefWidth="150" text="Return Date" />
                    <TableColumn fx:id="dueDateColumn" prefWidth="150" text="Due Date" />
                    <TableColumn fx:id="statusColumn" prefWidth="180" text="Status" />
                    <TableColumn fx:id="quantityColumn" maxWidth="100.0" prefWidth="132.0" text="Quantity" />
                </columns>
            </TableView>
        </VBox>
    </center>

</BorderPane>
