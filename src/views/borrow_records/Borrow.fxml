<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane stylesheets="@../../resources/Borrow.css" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.borrow_record.BorrowController">
    <top>
        <fx:include source="../frame/Header.fxml" />
    </top>
    <left>
        <fx:include source="SidebarBorrow.fxml" />
    </left>
    <center>
        <AnchorPane styleClass="anchor-pane">

            <!-- Tiêu đề -->
            <Label layoutX="412.0" layoutY="8.0" prefHeight="46.0" prefWidth="231.0" styleClass="header-label" text="Borrow Document" AnchorPane.leftAnchor="412.0" AnchorPane.topAnchor="8.0">
            <font>
               <Font size="25.0" />
            </font></Label>

            <!-- Chọn tài liệu -->
            <Label layoutX="159.0" layoutY="68.0" prefWidth="150" text="Document ID:" AnchorPane.leftAnchor="159.0" AnchorPane.topAnchor="68.0">
            <font>
               <Font size="18.0" />
            </font></Label>

            <TextField fx:id="documentIdField" layoutX="314.0" layoutY="62.0" prefHeight="30.0" prefWidth="500.0" promptText="Enter document id">
                <font>
                    <Font size="14.0" />
                </font>
            </TextField>

            <!-- Chọn người mượn -->
            <Label layoutX="159.0" layoutY="137.0" prefWidth="150" text="Member ID:" AnchorPane.leftAnchor="159.0" AnchorPane.topAnchor="137.0">
            <font>
               <Font size="18.0" />
            </font></Label>
            <TextField fx:id="memberIdField" layoutX="314.0" layoutY="134.0" prefHeight="30.0" prefWidth="500.0" promptText="Enter member id">
                <font>
                    <Font size="14.0" />
                </font>
            </TextField>

            <!-- Ngày mượn -->
            <Label layoutX="159.0" layoutY="210.0" prefWidth="150" text="Borrow Date:" AnchorPane.leftAnchor="159.0" AnchorPane.topAnchor="210.0">
            <font>
               <Font size="18.0" />
            </font></Label>
            <DatePicker fx:id="borrowDate" layoutX="313.0" layoutY="202.0" AnchorPane.leftAnchor="313.0" AnchorPane.topAnchor="202.0" />

            <!-- Ngày trả dự kiến -->
            <Label layoutX="159.0" layoutY="285.0" prefWidth="150" text="Due Date:" AnchorPane.leftAnchor="159.0" AnchorPane.topAnchor="285.0">
            <font>
               <Font size="18.0" />
            </font></Label>
            <DatePicker fx:id="dueDate" layoutX="313.0" layoutY="277.0" AnchorPane.leftAnchor="313.0" AnchorPane.topAnchor="277.0" />

<!--            Số lượng sách mượn-->
            <Label layoutX="159.0" layoutY="364.0" prefWidth="150" text="Quantity:">
                <font>
                    <Font size="18.0" />
                </font>
            </Label>
            <TextField fx:id="quantityBorrowField" layoutX="314.0" layoutY="362.0" prefHeight="30.0" prefWidth="500.0" promptText="Enter your quantity documents you want to borrow">
                <font>
                    <Font size="14.0" />
                </font>
            </TextField>

            <!-- Nút mượn tài liệu -->
            <Button fx:id="borrowButton" layoutX="403.0" layoutY="440.0" onAction="#onSubmit" styleClass="borrow-button" text="Borrow Document" AnchorPane.leftAnchor="403.0" AnchorPane.topAnchor="440.0">
            <font>
               <Font size="20.0" />
            </font></Button>
            <Label fx:id="errorDoc" layoutX="315.0" layoutY="104.0" prefHeight="30.0" prefWidth="497.0" styleClass="errol-label" />
            <Label fx:id="errorMem" layoutX="315.0" layoutY="176.0" prefHeight="30.0" prefWidth="492.0" styleClass="errol-label"  />
            <Label layoutX="316.0" layoutY="255.0" prefHeight="30.0" prefWidth="504.0" styleClass="errol-label" />
            <Label fx:id="errorDate" layoutX="316.0" layoutY="336.0" prefHeight="27.0" prefWidth="492.0" styleClass="errol-label" />
            <Label fx:id="errorQuantity" layoutX="313.0" layoutY="404.0" prefHeight="18.0" prefWidth="501.0" styleClass="errol-label"  />
        </AnchorPane>

    </center>

</BorderPane>
