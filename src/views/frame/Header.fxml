<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.paint.RadialGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.text.Font?>

<BorderPane stylesheets="@../../resources/stylesheet/Frame.css" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.HeaderController">

    <top>
        <VBox>
            <!-- Header -->
            <HBox fx:id="header" prefWidth="1350" spacing="10" styleClass="header">
                <Label styleClass="header-label" text="ManageLib">
               <textFill>
                  <RadialGradient centerX="0.5" centerY="0.5" radius="0.5">
                     <stops>
                        <Stop>
                           <color>
                              <Color />
                           </color>
                        </Stop>
                        <Stop offset="1.0">
                           <color>
                              <Color red="1.0" green="1.0" blue="1.0" />
                           </color>
                        </Stop>
                     </stops>
                  </RadialGradient>
               </textFill>
               <effect>
                  <Glow />
               </effect></Label>
                <Region prefHeight="34.0" prefWidth="48.0" HBox.hgrow="ALWAYS" />
                <AnchorPane prefHeight="0.0" prefWidth="366.0">
                    <TextField prefHeight="34.0" prefWidth="366.0" promptText="Search document..." styleClass="search-field">
                        <font>
                            <Font size="15.0" />
                        </font>
                    </TextField>
                    <ImageView fitHeight="46.0" fitWidth="45.0" layoutX="317.0" layoutY="0.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../../resources/image/search.png" />
                        </image>
                    </ImageView>
                </AnchorPane>
                <Region prefHeight="34.0" prefWidth="178.0" HBox.hgrow="ALWAYS" />
            </HBox>
            <!-- Navbar -->


            <HBox fx:id="navbar" spacing="20" styleClass="navbar">
                <Region prefHeight="36.0" prefWidth="150.0" />
                <Button prefHeight="36.0" prefWidth="110.0" styleClass="navbar-button" text="Home">
                    <graphic>
                        <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                            <image>
                                <Image url="@../../resources/image/home.png" />
                            </image>
                        </ImageView>
                    </graphic>
               <effect>
                  <Blend />
               </effect>
                </Button>
                <Region prefWidth="0.1" styleClass="separator" />
                <Button onAction="#ScenceBookList" prefWidth="210" styleClass="navbar-button" text="Document management">
                    <graphic>
                        <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                            <image>
                                <Image url="@../../resources/image/document.png" />
                            </image>
                        </ImageView>
                    </graphic>
               <effect>
                  <Blend />
               </effect>
                </Button>
                <Region prefWidth="0.1" styleClass="separator" />
                <Button onAction="#sceneBorrow" prefWidth="180" styleClass="navbar-button" text="Borrow documents">
                    <graphic>
                        <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                            <image>
                                <Image url="@../../resources/image/borrowBook.png" />
                            </image>
                        </ImageView>
                    </graphic>
               <effect>
                  <Blend />
               </effect>
                </Button>
                <Region prefWidth="0.1" styleClass="separator" />
                <Button onAction="#sceneMemberList" prefWidth="200" styleClass="navbar-button" text="Member management">
                    <graphic>
                        <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                            <image>
                                <Image url="@../../resources/image/member.png" />
                            </image>
                        </ImageView>
                    </graphic>
               <effect>
                  <Blend />
               </effect>
                </Button>
                <Region prefWidth="0.1" styleClass="separator" />
                <Button onAction="#sceneAdmin" prefWidth="130" styleClass="navbar-button" text="Admin Info">
                    <graphic>
                        <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                            <image>
                                <Image url="@../../resources/image/admin.png" />
                            </image>
                        </ImageView>
                    </graphic>
               <effect>
                  <Blend />
               </effect>
                </Button>
                <Region prefWidth="0.1" styleClass="separator" />
                <Button onAction="#logout" prefHeight="36.0" prefWidth="110.0" styleClass="navbar-button" text="Logout">
                    <graphic>
                        <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                            <image>
                                <Image url="@../../resources/image/logout_icon.png" />
                            </image>
                        </ImageView>
                    </graphic>
               <effect>
                  <Blend />
               </effect>
                </Button>
            </HBox>
        </VBox>
    </top>
</BorderPane>
