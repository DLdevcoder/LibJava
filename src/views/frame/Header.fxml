<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane stylesheets="@../../resources/stylesheet/Frame.css" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.HeaderController">

    <top>
        <VBox prefHeight="120.0" prefWidth="1350.0">
            <!-- Header -->
            <AnchorPane fx:id="header" prefHeight="70.0" prefWidth="1350" styleClass="header">
                <Label styleClass="header-label" text="ManageLib" />
                 <TextField layoutX="536.0" layoutY="19.0" prefHeight="34.0" prefWidth="366.0" promptText="Search document..." styleClass="search-field">
                     <font>
                         <Font size="15.0" />
                     </font>
                 </TextField>
                 <ImageView fitHeight="46.0" fitWidth="45.0" layoutX="857.0" layoutY="19.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                         <Image url="@../../resources/image/search.png" />
                     </image>
                 </ImageView>
                <Button fx:id="adminButtonScene" alignment="TOP_LEFT" layoutX="1165.0" layoutY="1.0" onAction="#sceneAdmin" prefWidth="140" styleClass="navbar-button" text="Account Info">
                    <graphic>
                        <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                            <image>
                                <Image url="@../../resources/image/admin.png" />
                            </image>
                        </ImageView>
                    </graphic>
                    <effect>
                        <Blend />
                    </effect>
                </Button>
                <Region prefWidth="0.1" styleClass="separator" />
                <Button fx:id="logoutButtonScene" alignment="TOP_LEFT" layoutX="1165.0" layoutY="43.0" onAction="#logout" prefHeight="36.0" prefWidth="140.0" styleClass="navbar-button" text="Logout">
                    <graphic>
                        <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                            <image>
                                <Image url="@../../resources/image/logout_icon.png" />
                            </image>
                        </ImageView>
                    </graphic>
                    <effect>
                        <Blend />
                    </effect>
                </Button>
            </AnchorPane>
            <!-- Navbar -->
            <fx:include source="Navbar.fxml" />
        </VBox>
    </top>
</BorderPane>
