<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.effect.Blend?>
<HBox stylesheets="@../../resources/stylesheet/Frame.css" fx:id="navbar" spacing="20" styleClass="navbar" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.HeaderController">
        <Button fx:id="homeButtonScene" prefHeight="36.0" prefWidth="215.0" styleClass="navbar-button" text="Home">
            <graphic>
                <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                    <image>
                        <Image url="@../../resources/image/home.png" />
                    </image>
                </ImageView>
            </graphic>
            <effect>
                <Blend />
            </effect>
        </Button>
        <Region prefWidth="0.1" styleClass="separator" />
        <Button fx:id="docButtonScene" onAction="#ScenceBookList" prefWidth="215" styleClass="navbar-button" text="Document management">
            <graphic>
                <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                    <image>
                        <Image url="@../../resources/image/document.png" />
                    </image>
                </ImageView>
            </graphic>
            <effect>
                <Blend />
            </effect>
        </Button>
        <Region prefWidth="0.1" styleClass="separator" />
        <Button fx:id="borrowButtonScene" onAction="#sceneBorrow" prefWidth="215" styleClass="navbar-button" text="Borrow documents">
            <graphic>
                <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                    <image>
                        <Image url="@../../resources/image/borrowBook.png" />
                    </image>
                </ImageView>
            </graphic>
            <effect>
                <Blend />
            </effect>
        </Button>
        <Region prefWidth="0.1" styleClass="separator" />
        <Button fx:id="memberButtonScene" onAction="#sceneMemberList" prefWidth="215" styleClass="navbar-button" text="Member management">
            <graphic>
                <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                    <image>
                        <Image url="@../../resources/image/member.png" />
                    </image>
                </ImageView>
            </graphic>
            <effect>
                <Blend />
            </effect>
        </Button>
    </HBox>