<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="690.0" prefWidth="930.0" stylesheets="@/Frame.css" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1">

    <top>
        <VBox>
            <!-- Header -->
            <HBox fx:id="header" spacing="10" styleClass="header">
                <Label styleClass="header-label" text="ManageLib">
                    <font>
                        <Font size="25.0" />
                    </font></Label>
                <Region prefHeight="36.0" prefWidth="213.0" HBox.hgrow="ALWAYS" />
                <TextField promptText="Search document" styleClass="search-field" />
                <Button styleClass="search-button" text="Search" />
                <Region prefHeight="36.0" prefWidth="326.0" />
            </HBox>

            <!-- Navbar -->
            <HBox fx:id="navbar" spacing="20" styleClass="navbar">
                <Button styleClass="navbar-button" text="Home" />
                <Button styleClass="navbar-button" text="Document management" />
                <Button styleClass="navbar-button" text="Borrow documents" />
                <Button styleClass="navbar-button" text="Member management" />
            </HBox>
        </VBox>
    </top>

    <left>
        <ScrollPane fitToWidth="true" prefHeight="509.0" prefWidth="159.0" styleClass="sidebar-scroll">
            <VBox fx:id="sidebar" spacing="8" styleClass="sidebar">
                <Label styleClass="sidebar-title" text="Sidebar" />
                <Button maxWidth="Infinity" prefWidth="127.0" styleClass="sidebar-button" />
                <Button maxWidth="Infinity" styleClass="sidebar-button" />
                <Button maxWidth="Infinity" styleClass="sidebar-button" />
                <Button maxWidth="Infinity" styleClass="sidebar-button" />
                <Button maxWidth="Infinity" styleClass="sidebar-button" />
                <Button maxWidth="Infinity" styleClass="sidebar-button" />
            </VBox>
        </ScrollPane>
    </left>

</BorderPane>
